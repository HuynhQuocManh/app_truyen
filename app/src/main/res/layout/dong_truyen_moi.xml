<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewhinhtruyenmoi"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/hinhtruyen"/>
    <TextView
        android:id="@+id/textviewngaycapnhat"
        android:layout_alignBottom="@id/imageviewhinhtruyenmoi"
        android:text="Update mgày 10/1/1999"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:background="#b8050505"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewtentruyen"
        android:layout_width="150dp"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        android:text="Thần Mộ chi huyết đế"
        android:textColor="#f000"
        android:layout_below="@id/imageviewhinhtruyenmoi"/>


</RelativeLayout>